{
  "agent": {
    "model_parameters": [],
    "play_sound_when_agent_done": true
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "buffer_line_height": "standard",
  "show_edit_predictions": false,
  "preferred_line_length": 120,
  "wrap_guides": [120],
  "ui_font_size": 18,
  "centered_layout": {
    "left_padding": 0.2,
    "right_padding": 0.2
  },
  "minimap": {
    "show": "auto"
  },
  "buffer_font_size": 16,
  "buffer_font_features": {
    "calt": true
  },
  "project_panel": {
    "indent_size": 15
  },
  "base_keymap": "VSCode",
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "toggle_on_modifiers_press": {
      "alt": true
    }
  },
  "hour_format": "hour24",
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "cursor_shape": "bar",
    "line_height": "standard"
  },
  "autosave": "on_focus_change",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "git": {
    "inline_blame": {
      "min_column": 120,
      "enabled": false,
      "show_commit_summary": true
    }
  },
  "vim": {
    "default_mode": "helix_normal"
  },
  "max_tabs": 5,
  "format_on_save": "on",
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": 30,
          "lifetimeElisionHints": {
            "useParameterNames": false,
            "enable": "skip_trivial"
          },
          "closureReturnTypeHints": {
            "enable": "always"
          },
          "check": {
            "command": "clippy"
          }
        }
      }
    }
  },
  "buffer_font_family": "TX-02-Variable",
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Mirage"
  }
}
